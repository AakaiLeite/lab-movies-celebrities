<h2>Movie Creation</h2>
 <nav>
    <p><a href="/">Home</a></p>
    <p><a href="/celebrities/create">Create a Celebrity!</a></p>
    <p><a href="/celebrities">View all Celebrities</a></p>
    <p><a href="/movies/create">Create a Movie</a></p>
    <p><a href="/movies">View all Movies</a></p>
  </nav>
<form action="/movies/create" method="POST">
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <label>
    Genre:
    <input type="text" name="genre" />
  </label>
  <label>
    Plot:
    <input type="text" name="plot" />
  </label>
  <label>
    Cast:
    <select name="cast" multiple>
      {{#each celebrity}}
        <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
    <button type="submit">Submit</button>
  </label>
</form>